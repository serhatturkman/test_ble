# Basic Thread Example Application configuration options

source "Kconfig.zephyr"

mainmenu "OGate Mini App"

menu "Application Configuration"

config APP_TASK_STACK_SIZE
    int "Application task stack size"
    default 1024
    help
      Stack size for application tasks in bytes.

config APP_TASK_PRIORITY
    int "Application task priority"
    default 7
    help
      Priority level for application tasks.

config APP_ENABLE_PDM_AUDIO
    bool "Enable PDM audio support"
    default y
    depends on HAS_HW_NRF_PDM
    help
      Enable PDM microphone support.

config APP_ENABLE_FLASH_OPERATIONS
    bool "Enable Flash operations"
    default y
    depends on FLASH
    help
      Enable QSPI NOR Flash operations.

config APP_LED_CONTROL
    bool "Enable LED control"
    default y
    help
      Enable LED control features.

endmenu